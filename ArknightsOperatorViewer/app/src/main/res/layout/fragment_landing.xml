<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".LandingFragment">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:alpha=".5"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/amiya"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/ohayo"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/amiya_smile">

    </ImageView>


    <TextView
        android:id="@+id/ohayo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/average_sans"
        android:padding="10dp"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="1"
        android:text="Welcome home, Doctor."
        android:textColor="@color/colorWhite"
        android:textSize="50dp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/redrect"
        android:layout_width="273dp"
        android:layout_height="38dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/breakingNews"
        app:layout_constraintEnd_toEndOf="@+id/breakingNews"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/breakingNews"
        app:layout_constraintTop_toTopOf="@+id/breakingNews"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/redrect"></ImageView>

    <TextView
        android:id="@+id/breakingNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/press_start_2p"
        android:paddingLeft="6dp"
        android:paddingBottom="4dp"
        android:text="BREAKING NEWS"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519"></TextView>

    <ImageView
        android:id="@+id/blackrect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:alpha=".7"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/redrect"
        app:layout_constraintTop_toBottomOf="@+id/redrect"
        app:srcCompat="@drawable/blackrect"></ImageView>

    <TextView
        android:id="@+id/introblurb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-condensed"
        android:padding="6dp"
        android:text="@string/intro_blurb"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/blackrect"
        app:layout_constraintEnd_toEndOf="@+id/blackrect"
        app:layout_constraintStart_toStartOf="@+id/blackrect"
        app:layout_constraintTop_toTopOf="@+id/blackrect" />

</androidx.constraintlayout.widget.ConstraintLayout>


